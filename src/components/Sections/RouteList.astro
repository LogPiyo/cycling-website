---
import { getCollection } from "astro:content";
import Card from "../UI/Card.astro";
import Button from "../UI/Button.astro";
import { formatDate } from "../../utils/dateUtils";

export interface Props {
  count?: number;
  showViewAll?: boolean;
}

const { count = 3, showViewAll = true } = Astro.props;

// Get routes sorted by date (newest first)
const allRoutes = await getCollection("routes", ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Sort by date (newest first)
const routes = allRoutes
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, count);
---

<section class="py-16 bg-white">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">新着サイクリングルート</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        最新のサイクリングルートをチェックして、次の冒険に出かけよう。
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {routes.map((route) => (
        <Card
          class="shadow-none"
          title={route.data.title}
          image={{
            src: route.data.image || "/images/route-placeholder.webp",
            alt: route.data.title
          }}
          href={`/routes/${route.slug}`}
        >
          <div class="mb-3 flex items-center text-gray-600">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <span>{formatDate(route.data.date)}</span>
          </div>
          
          {route.data.category && (
            <div class="mb-3 flex items-center text-gray-600">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
              <span>Category: {route.data.category}</span>
            </div>
          )}
          
          <p class="text-gray-700 mb-4">{route.data.summary}</p>

          <p class="text-primary-600 font-medium group-hover:underline group-hover:text-primary-700">
            Listen Now →
          </p>
          
        </Card>
      ))}
    </div>
    
    {showViewAll && routes.length > 0 && (
      <div class="mt-12 text-center">
        <Button href="/routes" variant="outline">
          サイクリングルートをもっと見る
        </Button>
      </div>
    )}
  </div>
</section>
