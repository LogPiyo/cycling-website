---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHeader from "../../components/Sections/PageHeader.astro";
import Card from "../../components/UI/Card.astro";
import { getCollection } from "astro:content";
import { formatDate } from "../../utils/dateUtils";

// Get all routes
const allRoutes = await getCollection("routes", ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true;
});

// Sort by date (newest first)
const routes = allRoutes.sort((a, b) => 
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Get unique category for filters
const category = [...new Set(routes.map(route => route.data.category).filter(Boolean))];

// Get unique tags and prefectures (if present) for filters
const tags = [...new Set(routes.flatMap(route => (route.data.tags || [])))];
const prefectures = [...new Set(routes.map(route => route.data.prefecture).filter(Boolean))];
---

<BaseLayout
  title="サイクリングルート - ギークのためのサイクリング"
  description="全国の自治体が提供するサイクリングルートや自転車ネットワークを紹介しています。ギークなサイクリストのための情報共有プラットフォームです。"
>
  <PageHeader 
    title="サイクリングルート" 
    subtitle="最新のルート情報をチェックしよう"
    backgroundImage="/uploads/cyclingroute-header-bg.webp"
  />
  
  <!-- Cycling Route List -->
  <section class="py-16">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Filters Sidebar -->
        <div class="lg:col-span-1">
          <div class="bg-white p-6 rounded-lg shadow-sm sticky top-24">
            <h2 class="text-xl font-bold mb-6">ルートを絞り込む</h2>
            
            <!-- Search -->
            <div class="mb-6">
              <label for="search" class="block text-sm font-medium text-gray-700 mb-1">キーワード</label>
              <input 
                type="text" 
                id="search" 
                placeholder="（例）太平洋岸自転車道" 
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
            
            <!-- Category Filter -->
            {
              category.length > 0 && (
                <div class="mb-6">
                  <label for="category" class="block text-sm font-medium text-gray-700 mb-1">カテゴリ</label>
                  <select 
                    id="category" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                  >
                    <option value="">すべてのカテゴリ</option>
                    {category.map(s => (
                      <option value={s}>{s}</option>
                    ))}
                  </select>
                </div>
              )
            }
            
            <!-- Prefecture Filter -->
            {
              prefectures.length > 0 && (
                <div class="mb-6">
                  <label for="prefecture" class="block text-sm font-medium text-gray-700 mb-1">都道府県</label>
                  <select 
                    id="prefecture" 
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                  >
                    <option value="">すべての都道府県</option>
                    {prefectures.map(p => (
                      <option value={p}>{p}</option>
                    ))}
                  </select>
                </div>
              )
            }
            
            <!-- Tags Filter -->
            {
              tags.length > 0 && (
                <div class="mt-6">
                  <label class="block text-sm font-medium text-gray-700 mb-2">タグで絞り込む</label>
                  <div class="grid grid-cols-2 gap-2 max-h-40 overflow-auto pr-2">
                    {tags.map(t => (
                      <label class="inline-flex items-center text-sm">
                        <input type="checkbox" class="tag-checkbox mr-2" value={t} />
                        <span class="text-gray-700">{t}</span>
                      </label>
                    ))}
                  </div>
                </div>
              )
            }
            
            <!-- Date Range Filter -->
            <div class="space-y-3">
              <label class="block text-sm font-medium text-gray-700">Date Range</label>
              
              <div>
                <label for="from-date" class="block text-xs text-gray-500 mb-1">From</label>
                <input 
                  type="date" 
                  id="from-date" 
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                />
              </div>
              
              <div>
                <label for="to-date" class="block text-xs text-gray-500 mb-1">To</label>
                <input 
                  type="date" 
                  id="to-date" 
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                />
              </div>
            </div>
            
            <!-- Reset Filters Button -->
            <button 
              id="reset-filters"
              class="w-full mt-6 px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2"
            >
              リセットする
            </button>
          </div>
        </div>
        
        <!-- Routes Grid -->
        <div class="lg:col-span-3">
          <h2 class="text-2xl font-bold mb-6">すべてのサイクリングルート</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8" id="routes-grid">
            {routes.map((route) => (
              <Card
                title={route.data.title}
                image={{
                  src: route.data.image || "/uploads/route-placeholder.webp",
                  alt: route.data.title
                }}
                href={`/routes/${route.slug}`}
                className="route-card"
                data-category={route.data.category || ""}
                data-date={route.data.date.toISOString().slice(0, 10)}
                data-tags={route.data.tags ? route.data.tags.join(',') : ''}
                data-prefecture={route.data.prefecture || ''}
              >
                <div class="mb-3 flex items-center text-gray-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span>{formatDate(route.data.date)}</span>
                </div>
                
                {route.data.prefecture && (
                  <div class="mb-3 flex items-center text-gray-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c1.657 0 3-1.343 3-3s-1.343-3-3-3-3 1.343-3 3 1.343 3 3 3z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 22s8-4.5 8-10a8 8 0 10-16 0c0 5.5 8 10 8 10z" />
                    </svg>
                    <span>{route.data.prefecture}</span>
                  </div>
                )}
                
                {route.data.category && (
                  <div class="mb-3 flex items-center text-gray-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                    <span>{route.data.category}</span>
                  </div>
                )}
                                
                <p class="text-gray-700 mb-4">{route.data.summary}</p>

                <p class="text-primary-600 font-medium group-hover:underline group-hover:text-primary-700">
                  Listen/Watch →
                </p>
              </Card>
            ))}
          </div>
          
          <!-- No Results Message (Hidden by default) -->
          <div id="no-results" class="hidden text-center py-12 bg-gray-50 rounded-lg mt-8">
            <p class="text-gray-600">No routes match your search criteria. Please try different filters.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <script>
    // Filter functionality
    document.addEventListener('DOMContentLoaded', () => {
      const searchInput = document.getElementById('search');
      const categorySelect = document.getElementById('category');
      const speakerSelect = document.getElementById('speaker');
      const fromDateInput = document.getElementById('from-date');
      const toDateInput = document.getElementById('to-date');
      const resetButton = document.getElementById('reset-filters');
      const routesGrid = document.getElementById('routes-grid');
      const noResults = document.getElementById('no-results');
      const routesCards = document.querySelectorAll('.route-card');
      
      // Function to filter routes
      const filterRoutes = () => {
        const searchTerm = searchInput?.value.toLowerCase() || '';
        const selectedCategory = categorySelect?.value || '';
        const selectedSpeaker = speakerSelect?.value || '';
        const fromDate = fromDateInput?.value || '';
        const toDate = toDateInput?.value || '';
        
        let visibleCount = 0;
        
        routesCards.forEach(card => {
          const title = card.querySelector('h3')?.textContent.toLowerCase() || '';
          const summary = card.querySelector('p')?.textContent.toLowerCase() || '';
          const category = card.getAttribute('data-category') || '';
          const date = card.getAttribute('data-date') || '';
          
          // Check if route matches all filters
          const matchesSearch = title.includes(searchTerm) || summary.includes(searchTerm);
          const matchesCategory = !selectedCategory || category === selectedCategory;
          const matchesFromDate = !fromDate || date >= fromDate;
          const matchesToDate = !toDate || date <= toDate;
          
          // Show/hide the route card
          if (matchesSearch && matchesCategory && matchesFromDate && matchesToDate) {
            card.style.display = 'block';
            visibleCount++;
          } else {
            card.style.display = 'none';
          }
        });
        
        // Show/hide no results message
        if (noResults) {
          noResults.style.display = visibleCount === 0 ? 'block' : 'none';
        }
      };
      
      // Add event listeners
      searchInput?.addEventListener('input', filterRoutes);
      categorySelect?.addEventListener('change', filterRoutes);
      speakerSelect?.addEventListener('change', filterRoutes);
      fromDateInput?.addEventListener('change', filterRoutes);
      toDateInput?.addEventListener('change', filterRoutes);
      
      // Reset filters
      resetButton?.addEventListener('click', () => {
        if (searchInput) searchInput.value = '';
        if (categorySelect) categorySelect.value = '';
        if (speakerSelect) speakerSelect.value = '';
        if (fromDateInput) fromDateInput.value = '';
        if (toDateInput) toDateInput.value = '';
        
        filterRoutes();
      });
    });
  </script>
</BaseLayout>
